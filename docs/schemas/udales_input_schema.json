{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "u-DALES Namelist Parameters",
  "description": "Schema for u-DALES atmospheric simulation parameters",
  "type": "object",
  "properties": {
    "RUN": {
      "type": "object",
      "description": "Runtime control parameters",
      "properties": {
        "iexpnr": {
          "type": "integer",
          "minimum": 0,
          "maximum": 999,
          "default": 0,
          "description": "Three digit integer. Experiment case number"
        },
        "lwarmstart": {
          "type": "boolean",
          "default": false,
          "description": "If true simulation reads in restart file to initialize fields"
        },
        "lstratstart": {
          "type": "boolean",
          "default": false,
          "description": "If true simulation reads restart files as warm start but overwrites thl and qt from profile"
        },
        "startfile": {
          "type": "string",
          "default": "",
          "description": "Name of restart file, the last three digits should match iexpnr"
        },
        "runtime": {
          "type": "number",
          "minimum": 0,
          "description": "Simulation time [s]"
        },
        "trestart": {
          "type": "number",
          "minimum": 0,
          "default": 10000,
          "description": "Time at which restart files are written [s]"
        },
        "dtmax": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum allowed numerical integration timestep [s]"
        },
        "ladaptive": {
          "type": "boolean",
          "default": false,
          "description": "Switch for adaptive time-stepping, true recommended"
        },
        "courant": {
          "type": "number",
          "minimum": 1,
          "maximum": 2,
          "default": 1.1,
          "description": "Courant number"
        },
        "diffnr": {
          "type": "number",
          "minimum": 0,
          "default": 0.25,
          "description": "Diffusion number for numerical stability"
        },
        "author": {
          "type": "string",
          "default": "",
          "description": "Author name for simulation metadata"
        },
        "lrandomize": {
          "type": "boolean",
          "default": true,
          "description": "Switch that determines whether initial field is randomised"
        },
        "irandom": {
          "type": "integer",
          "minimum": 1,
          "default": 43,
          "description": "Seed for random number generation"
        },
        "randu": {
          "type": "number",
          "minimum": 0,
          "default": 0.01,
          "description": "Amplitude of velocity field randomisation [m/s]"
        },
        "randthl": {
          "type": "number",
          "minimum": 0,
          "default": 0.0,
          "description": "Amplitude of temperature field randomisation [K]"
        },
        "randqt": {
          "type": "number",
          "minimum": 0,
          "default": 0.0,
          "description": "Amplitude of moisture field randomisation [kg/kg]"
        },
        "krand": {
          "type": "integer",
          "minimum": 0,
          "default": 2147483647,
          "description": "Upper limit for random number generation"
        },
        "libm": {
          "type": "boolean",
          "default": true,
          "description": "Switch that determines whether the Immersed Boundary Method is turned on"
        },
        "lles": {
          "type": "boolean",
          "default": true,
          "description": "Switch that determines whether the subgrid model is turned on or constant ekm and ekh are used (DNS)"
        },
        "lper2inout": {
          "type": "boolean",
          "default": false,
          "description": "Switch for restart periodic flow to inoutflow"
        },
        "lwalldist": {
          "type": "boolean",
          "default": false,
          "description": "Switch for computing wall distances"
        },
        "lreadmean": {
          "type": "boolean",
          "default": false,
          "description": "Switch for reading mean variables from means files"
        },
        "nprocx": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of pencils in the x-direction, must be a divisor of itot"
        },
        "nprocy": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of pencils in the y-direction, must be a divisor of jtot and ktot"
        }
      },
      "required": [
        "runtime",
        "dtmax",
        "nprocx",
        "nprocy"
      ]
    },
    "DOMAIN": {
      "type": "object",
      "description": "Domain geometry parameters",
      "properties": {
        "itot": {
          "type": "integer",
          "minimum": 1,
          "default": 96,
          "description": "Number of points in x-direction"
        },
        "jtot": {
          "type": "integer",
          "minimum": 1,
          "default": 96,
          "description": "Number of points in y-direction"
        },
        "ktot": {
          "type": "integer",
          "minimum": 1,
          "default": 96,
          "description": "Number of points in z-direction"
        },
        "xlen": {
          "type": "number",
          "minimum": 0,
          "description": "Domain size in x-direction [m]"
        },
        "ylen": {
          "type": "number",
          "minimum": 0,
          "description": "Domain size in y-direction [m]"
        },
        "xlat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "default": 52.0,
          "description": "Latitude of domain center [degrees]"
        },
        "xlon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "default": 0.0,
          "description": "Longitude of domain center [degrees]"
        },
        "xday": {
          "type": "number",
          "minimum": 1,
          "maximum": 366,
          "default": 1,
          "description": "Day of year for simulation"
        },
        "xtime": {
          "type": "number",
          "minimum": 0,
          "maximum": 24,
          "default": 0.0,
          "description": "Time of day for simulation start [hours]"
        },
        "ksp": {
          "type": "integer",
          "minimum": 1,
          "default": -1,
          "description": "Index of first grid point above surface for pressure"
        }
      },
      "required": [
        "xlen",
        "ylen"
      ]
    },
    "PHYSICS": {
      "type": "object",
      "description": "Physical process parameters",
      "properties": {
        "ps": {
          "type": "number",
          "minimum": 0,
          "default": 101325,
          "description": "Air pressure at surface [Pa]"
        },
        "igrw_damp": {
          "type": "integer",
          "enum": [
            0,
            1,
            2,
            3
          ],
          "default": 0,
          "description": "Integer switch to enable gravity wave damping"
        },
        "ltempeq": {
          "type": "boolean",
          "default": false,
          "description": "Switch for solving temperature equation"
        },
        "lbuoyancy": {
          "type": "boolean",
          "default": false,
          "description": "Switch for buoyancy force in temperature equation"
        },
        "lmoist": {
          "type": "boolean",
          "default": false,
          "description": "Switch for solving moisture equation"
        },
        "lcoriol": {
          "type": "boolean",
          "default": false,
          "description": "Switch for including the Coriolis force"
        },
        "lprofforc": {
          "type": "boolean",
          "default": false,
          "description": "Switch for profile forcing"
        },
        "ifixuinf": {
          "type": "integer",
          "default": 0,
          "description": "Switch for fixing u-velocity at infinity"
        },
        "lvinf": {
          "type": "boolean",
          "default": false,
          "description": "Switch for v-velocity at infinity"
        },
        "tscale": {
          "type": "number",
          "default": 0.0,
          "description": "Time scale factor"
        },
        "dpdx": {
          "type": "number",
          "default": 0.0,
          "description": "Pressure gradient in x-direction [Pa/m]"
        },
        "luoutflowr": {
          "type": "boolean",
          "default": false,
          "description": "Switch for u-velocity correction for fixed mass outflow rate"
        },
        "lvoutflowr": {
          "type": "boolean",
          "default": false,
          "description": "Switch for v-velocity correction for fixed mass outflow rate"
        },
        "luvolflowr": {
          "type": "boolean",
          "default": false,
          "description": "Switch for u-velocity correction for fixed volume flow rate"
        },
        "lvvolflowr": {
          "type": "boolean",
          "default": false,
          "description": "Switch for v-velocity correction for fixed volume flow rate"
        },
        "uflowrate": {
          "type": "number",
          "default": 1.0,
          "description": "Fixed u-velocity flow rate [m/s]"
        },
        "vflowrate": {
          "type": "number",
          "default": 1.0,
          "description": "Fixed v-velocity flow rate [m/s]"
        },
        "lnudge": {
          "type": "boolean",
          "default": false,
          "description": "Switch for nudging"
        },
        "lnudgevel": {
          "type": "boolean",
          "default": true,
          "description": "Switch for velocity nudging"
        },
        "tnudge": {
          "type": "number",
          "default": 60.0,
          "description": "Nudging time scale [s]"
        },
        "nnudge": {
          "type": "integer",
          "default": 0,
          "description": "Number of nudging points"
        },
        "ltimedepsurf": {
          "type": "boolean",
          "default": false,
          "description": "Switch for time-dependent surface forcing"
        },
        "ntimedepsurf": {
          "type": "integer",
          "default": 0,
          "description": "Number of time-dependent surface forcing points"
        },
        "ltimedepnudge": {
          "type": "boolean",
          "default": false,
          "description": "Switch for time-dependent nudging"
        },
        "ntimedepnudge": {
          "type": "integer",
          "default": 0,
          "description": "Number of time-dependent nudging points"
        },
        "ltimedeplw": {
          "type": "boolean",
          "default": false,
          "description": "Switch for time-dependent longwave forcing"
        },
        "ntimedeplw": {
          "type": "integer",
          "default": 0,
          "description": "Number of time-dependent longwave forcing points"
        },
        "ltimedepsw": {
          "type": "boolean",
          "default": false,
          "description": "Switch for time-dependent shortwave forcing"
        },
        "ntimedepsw": {
          "type": "integer",
          "default": 0,
          "description": "Number of time-dependent shortwave forcing points"
        }
      }
    },
    "DYNAMICS": {
      "type": "object",
      "description": "Numerical dynamics parameters",
      "properties": {
        "lqlnr": {
          "type": "boolean",
          "default": false,
          "description": "Logical for calculation of liquid water concentration"
        },
        "ipoiss": {
          "type": "integer",
          "enum": [
            0
          ],
          "default": 0,
          "description": "Poisson solver. 0 = using 2D Fast Fourier Transform"
        },
        "iadv_mom": {
          "type": "integer",
          "enum": [
            1,
            2,
            7
          ],
          "default": 2,
          "description": "Advection scheme for momentum (1=upwind, 2=central, 7=kappa)"
        },
        "iadv_tke": {
          "type": "integer",
          "enum": [
            1,
            2,
            7
          ],
          "default": 2,
          "description": "Advection scheme for TKE"
        },
        "iadv_thl": {
          "type": "integer",
          "enum": [
            1,
            2,
            7
          ],
          "default": 2,
          "description": "Advection scheme for temperature"
        },
        "iadv_qt": {
          "type": "integer",
          "enum": [
            1,
            2,
            7
          ],
          "default": 2,
          "description": "Advection scheme for moisture"
        },
        "iadv_sv": {
          "type": "integer",
          "enum": [
            1,
            2,
            7
          ],
          "default": 7,
          "description": "Advection scheme for scalars"
        }
      }
    },
    "CHEMISTRY": {
      "type": "object",
      "description": "Basic chemistry parameters",
      "properties": {
        "lchem": {
          "type": "boolean",
          "default": false,
          "description": "Switch for basic chemistry"
        },
        "k1": {
          "type": "number",
          "default": 0.0,
          "description": "Reaction rate k1"
        },
        "jno2": {
          "type": "integer",
          "default": 0,
          "description": "Photolysis rate for NO2"
        }
      }
    },
    "BC": {
      "type": "object",
      "description": "Boundary condition parameters",
      "properties": {
        "bcxm": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for momentum in x-direction (west)"
        },
        "bcxt": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for temperature in x-direction (west)"
        },
        "bcxq": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for moisture in x-direction (west)"
        },
        "bcxs": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for scalars in x-direction (west)"
        },
        "bcym": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for momentum in y-direction (south)"
        },
        "bcyt": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for temperature in y-direction (south)"
        },
        "bcyq": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for moisture in y-direction (south)"
        },
        "bcys": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for scalars in y-direction (south)"
        },
        "bctopm": {
          "type": "integer",
          "default": 2,
          "description": "Boundary condition for momentum at top"
        },
        "bctopt": {
          "type": "integer",
          "default": 2,
          "description": "Boundary condition for temperature at top"
        },
        "bctopq": {
          "type": "integer",
          "default": 2,
          "description": "Boundary condition for moisture at top"
        },
        "bctops": {
          "type": "integer",
          "default": 2,
          "description": "Boundary condition for scalars at top"
        },
        "bcbotm": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for momentum at bottom"
        },
        "bcbott": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for temperature at bottom"
        },
        "bcbotq": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for moisture at bottom"
        },
        "bcbots": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for scalars at bottom"
        },
        "bctfxm": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at west boundary [K]"
        },
        "bctfxp": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at east boundary [K]"
        },
        "bctfym": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at south boundary [K]"
        },
        "bctfyp": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at north boundary [K]"
        },
        "bctfz": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at top/bottom boundary [K]"
        },
        "bcqfxm": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at west boundary [kg/kg]"
        },
        "bcqfxp": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at east boundary [kg/kg]"
        },
        "bcqfym": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at south boundary [kg/kg]"
        },
        "bcqfyp": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at north boundary [kg/kg]"
        },
        "bcqfz": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at top/bottom boundary [kg/kg]"
        },
        "wttop": {
          "type": "number",
          "default": 0.0,
          "description": "Surface heat flux at top [K*m/s]"
        },
        "thl_top": {
          "type": "number",
          "default": 288.0,
          "description": "Fixed temperature at top [K]"
        },
        "qt_top": {
          "type": "number",
          "default": 0.0,
          "description": "Fixed moisture at top [kg/kg]"
        },
        "qts": {
          "type": "number",
          "default": 0.0,
          "description": "Surface moisture [kg/kg]"
        },
        "wsvsurfdum": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [],
          "description": "Surface scalar fluxes [varies]"
        },
        "wsvtopdum": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [],
          "description": "Top scalar fluxes [varies]"
        },
        "wtsurf": {
          "type": "number",
          "default": 0.0,
          "description": "Surface heat flux [K*m/s]"
        },
        "wqsurf": {
          "type": "number",
          "default": 0.0,
          "description": "Surface moisture flux [kg/kg*m/s]"
        },
        "thls": {
          "type": "number",
          "default": 288.0,
          "description": "Surface temperature [K]"
        },
        "z0": {
          "type": "number",
          "minimum": 0,
          "default": 0.1,
          "description": "Surface roughness length for momentum [m]"
        },
        "z0h": {
          "type": "number",
          "minimum": 0,
          "default": 0.01,
          "description": "Surface roughness length for heat [m]"
        },
        "bczp": {
          "type": "integer",
          "default": 1,
          "description": "Boundary condition for pressure in z-direction"
        },
        "ds": {
          "type": "number",
          "default": 1.0,
          "description": "Grid spacing parameter [m]"
        }
      }
    },
    "INLET": {
      "type": "object",
      "description": "Inlet boundary condition parameters",
      "properties": {
        "uinf": {
          "type": "number",
          "default": 1.0,
          "description": "Free stream velocity in x-direction [m/s]"
        },
        "vinf": {
          "type": "number",
          "default": 0.0,
          "description": "Free stream velocity in y-direction [m/s]"
        },
        "di": {
          "type": "number",
          "default": 1.0,
          "description": "Inlet distance parameter [m]"
        },
        "dti": {
          "type": "number",
          "default": 1.0,
          "description": "Inlet time step parameter [s]"
        },
        "inletav": {
          "type": "number",
          "default": 600.0,
          "description": "Inlet averaging time [s]"
        },
        "linletra": {
          "type": "boolean",
          "default": false,
          "description": "Switch for running average in inlet generator"
        },
        "lstoreplane": {
          "type": "boolean",
          "default": false,
          "description": "Switch for storing i-plane data to serve as inlet for future simulation"
        },
        "lreadminl": {
          "type": "boolean",
          "default": false,
          "description": "Switch for reading mean inlet/recycle plane profiles"
        },
        "lfixinlet": {
          "type": "boolean",
          "default": false,
          "description": "Switch for keeping average inlet velocity and temperature fixed at inlet"
        },
        "lfixutauin": {
          "type": "boolean",
          "default": false,
          "description": "Switch for keeping utau fixed at inlet"
        },
        "lwallfunc": {
          "type": "boolean",
          "default": false,
          "description": "Switch for wall function"
        }
      }
    },
    "DRIVER": {
      "type": "object",
      "description": "Driver inlet simulation parameters",
      "properties": {
        "idriver": {
          "type": "integer",
          "default": 0,
          "description": "Switch for driver inlet simulation"
        },
        "tdriverstart": {
          "type": "number",
          "default": 0.0,
          "description": "Driver start time [s]"
        },
        "driverjobnr": {
          "type": "integer",
          "default": 0,
          "description": "Driver job number"
        },
        "dtdriver": {
          "type": "number",
          "default": 1.0,
          "description": "Driver time step [s]"
        },
        "driverstore": {
          "type": "integer",
          "default": 1,
          "description": "Driver storage interval"
        },
        "iplane": {
          "type": "integer",
          "default": 2,
          "description": "i-plane that is stored if lstoreplane is true"
        },
        "iangledeg": {
          "type": "number",
          "default": 0.0,
          "description": "Angle in degrees for inlet"
        },
        "lchunkread": {
          "type": "boolean",
          "default": false,
          "description": "Switch for chunk reading"
        },
        "chunkread_size": {
          "type": "integer",
          "default": 1,
          "description": "Chunk read size"
        }
      }
    },
    "WALLS": {
      "type": "object",
      "description": "Wall and IBM parameters",
      "properties": {
        "nblocks": {
          "type": "integer",
          "default": 0,
          "description": "Number of blocks used in IBM"
        },
        "nfcts": {
          "type": "integer",
          "default": 0,
          "description": "Number of facets"
        },
        "iwallmom": {
          "type": "integer",
          "default": 1,
          "description": "Wall treatment for momentum (1=no wall function, 2=werner-wengle, 3=uno)"
        },
        "iwalltemp": {
          "type": "integer",
          "default": 1,
          "description": "Wall treatment for temperature (1=no wall function/fixed flux, 2=no wall function/fixed value, 3=uno)"
        },
        "iwallmoist": {
          "type": "integer",
          "default": 1,
          "description": "Wall treatment for moisture (1=no wall function/fixed flux, 2=no wall function/fixed value, 3=uno)"
        },
        "iwallscal": {
          "type": "integer",
          "default": 1,
          "description": "Wall treatment for scalars"
        },
        "nsolpts_u": {
          "type": "integer",
          "default": 0,
          "description": "Number of solid points for u-velocity"
        },
        "nsolpts_v": {
          "type": "integer",
          "default": 0,
          "description": "Number of solid points for v-velocity"
        },
        "nsolpts_w": {
          "type": "integer",
          "default": 0,
          "description": "Number of solid points for w-velocity"
        },
        "nsolpts_c": {
          "type": "integer",
          "default": 0,
          "description": "Number of solid points for scalars"
        },
        "nbndpts_u": {
          "type": "integer",
          "default": 0,
          "description": "Number of boundary points for u-velocity"
        },
        "nbndpts_v": {
          "type": "integer",
          "default": 0,
          "description": "Number of boundary points for v-velocity"
        },
        "nbndpts_w": {
          "type": "integer",
          "default": 0,
          "description": "Number of boundary points for w-velocity"
        },
        "nbndpts_c": {
          "type": "integer",
          "default": 0,
          "description": "Number of boundary points for scalars"
        },
        "nfctsecs_u": {
          "type": "integer",
          "default": 0,
          "description": "Number of facet sections for u-velocity"
        },
        "nfctsecs_v": {
          "type": "integer",
          "default": 0,
          "description": "Number of facet sections for v-velocity"
        },
        "nfctsecs_w": {
          "type": "integer",
          "default": 0,
          "description": "Number of facet sections for w-velocity"
        },
        "nfctsecs_c": {
          "type": "integer",
          "default": 0,
          "description": "Number of facet sections for scalars"
        },
        "lbottom": {
          "type": "boolean",
          "default": true,
          "description": "Switch for bottom boundary"
        },
        "lnorec": {
          "type": "boolean",
          "default": false,
          "description": "Switch for no reconstruction"
        },
        "prandtlturb": {
          "type": "number",
          "default": 0.33,
          "description": "Turbulent Prandtl number"
        },
